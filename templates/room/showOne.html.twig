{% extends 'base.html.twig' %}

{% block title %}{{ room.name }} - Rezervisi salu za sastanak{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    {{ encore_entry_script_tags('timeline') }}
{% endblock %}
{% block body %}

    {%  if error_msg %}
        <div class="alert alert-danger">
            {{ error_msg }}
        </div>
    {% endif %}

        <div class="card whiteCard75 shadow-sm">
            <div class="card-body  px-lg-4 m-lg-4 px-sm-0 m-sm-0">
                <h2 class="card-title text-center">{{ room.name }}</h2>
                <input type="hidden" id="roomID" value="{{ room.id }}">
                <br>
                <hr>
                <div class="card-text">
                    <div class="row">
                        <div class="col-6 fw-bolder text-end">Kapacitet:</div>
                        <div class="col-6">{{ room.seatNumber }} osoba</div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-6 fw-bolder text-end">Locirano u: </div>
                        <div class="col-6">{{ room.city }}, {{ room.street }}</div>
                    </div>
                </div>
                <hr>

                <div class=" p-3 bg-light">
                    <h6 class="text-center">Raspored sastanaka prema odabranom datumu:</h6>
                    <br>
                    <div id="timelineList" ></div>
                </div>

                <hr>

                {% if form %}
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <br>
                        <button type="submit" class="btn btn-primary d-block mx-auto pinkBtn">Rezervi≈°i</button>
                    {{ form_end(form) }}
                {% else %}
                    <a href="{{ path('app_login') }}" class="d-block text-center">Prijavi se za opciju rezervisanja sale za sastanak</a>
                {% endif %}

            </div>
        </div>



{% endblock %}