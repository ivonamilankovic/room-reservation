{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

    <form method="post" class="w-50 mx-auto mt-5">
        <h2>Prijava</h2>
        <br>

        {% if error  %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <p>You are logged in as {{ app.user.username }}</p>
            <a href="{{ path('app_logout') }}">Odjavi se</a>
        {% endif %}

        <div class="mb-3">
            <label for="email" class="form-label">Email addresa</label>
            <input type="email" class="form-control" id="email" name="email" value="{{ last_username }}" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Lozinka</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="_remember_me" name="_remember_me">
            <label class="form-check-label" for="_remember_me">Zapamti me</label>
        </div>

        <input type="hidden" name="token" value="{{ csrf_token('authenticate') }}">

        <br>
        <button type="submit" class="btn btn-primary" style="background-color: #F482D4; border: none">Prijavi me</button>
    </form>


{% endblock %}
