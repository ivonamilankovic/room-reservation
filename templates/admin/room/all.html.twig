{% extends 'base.html.twig' %}

{% block title %}Sve sobe - Admin{% endblock %}

{% block body %}

    {% for r in app.user.roles %}
        {% if r == "ROLE_ADMIN" %}
            <a href="{{ path('admin_insert_room') }}" class="btn btn-warning mb-3">Dodaj novu sobu</a>
        {% endif %}
    {% endfor %}

    <table class="table table-hover bg-light">
        <tr>
            <th>RB</th>
            <th>Naziv</th>
            <th>Kapacitet</th>
            <th>Grad</th>
            <th>Ulica</th>
            <th></th>
        </tr>
    {% set counter = 1 %}
    {% for room in rooms %}
        <tr>
            <td>{{ counter }}</td>
            <td>{{ room.name }}</td>
            <td>{{ room.seatNumber }} osoba</td>
            <td>{{ room.city }}</td>
            <td>{{ room.street }}</td>
            <td>
                {% for r in app.user.roles %}
                    {% if r == "ROLE_ADMIN" %}
                        <a href="{{ path('admin_edit_room', { 'id': room.id}) }}" class="btn btn-warning">Izmeni</a> <a href="{{ path('admin_delete_room', {'id': room.id}) }}" class="btn btn-danger">Izbri≈°i</a>
                    {% endif %}
                {% endfor %}
            </td>
        </tr>
        {% set counter = counter + 1 %}
    {% endfor %}
    </table>

{% endblock %}