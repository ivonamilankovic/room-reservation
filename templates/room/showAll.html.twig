{% extends 'base.html.twig' %}

{% block title %}Sve sobe{% endblock %}

{% block body %}

    {% set counter = 1 %}

    {% for room in rooms %}

        <div class="card w-50 mx-auto my-5 shadow">
            <div class="card-header ps-4">Soba #{{ counter }}</div>
            <div class="card-body mx-5 px-5 pb-4">
                <h3 class="card-title">{{ room.name }}</h3>
                <br>
                <div class="row">
                    <div class="col-3 fw-bolder">Kapacitet:</div>
                    <div class="col">{{ room.seatNumber }} osoba</div>
                </div>
                <br>
                <div class="row">
                    <div class="col-3 fw-bolder">Locirano u:</div>
                    <div class="col">{{ room.city }}, {{ room.street }}</div>
                </div>
                <br>
                <a href="{{ path('app_showbyid_room', { 'id': room.id}) }}" class="btn btn-primary" style="background-color: #F482D4; border: none">Rezervi≈°i ovu sobu</a>
            </div>
        </div>

        {% set counter = counter + 1 %}
    {% endfor %}

{% endblock %}