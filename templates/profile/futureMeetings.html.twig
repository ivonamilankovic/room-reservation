{% extends 'base.html.twig' %}

{% block title %}Buduci sastanci{% endblock %}

{% block body %}

    <div class="w-75 mx-auto my-5 p-4 border rounded bg-white shadow">
        <h2 class="text-center" style="color: #0089DE">BuduÄ‡i zakazani sastanci</h2>
        <hr>
        {% if meetings %}
            {% for meeting in meetings %}
                <div class="border-start p-3 d-flex justify-content-between">
                    <div>
                        <h6>Sastanak od {{ meeting.meeting.start|date('H:i') }}h do {{ meeting.meeting.end|date('H:i') }}h
                            u prostoriji '{{ meeting.meeting.room.name }}', {{ meeting.meeting.room.street}} - {{ meeting.meeting.room.city }}
                        </h6>
                        <p class="fst-italic"><span class="fst-normal">Tema sastanka: </span>{{ meeting.meeting.description }}</p>
                        <h6>Kreirao/la: {{ meeting.meeting.creator.fullName }}</h6>
                    </div>
                    <div class="d-flex align-items-end border-start px-3 bg-light">
                        <p>Datum: <br>{{ meeting.meeting.start|date('d.m.Y') }}</p>
                    </div>
                </div>
                <hr>
            {% endfor %}
        {% else %}
            <p>Nemate zakazanih sastanaka.</p>
        {% endif %}
    </div>
{% endblock %}